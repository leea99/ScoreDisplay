<Page x:Class="ScoreDisplay.Scoreboards.MLB"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ScoreDisplay.Scoreboards"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MLB">

    <Grid Background="White">
        <Image x:Name="HomeTeam" HorizontalAlignment="Left" Height="150" Margin="41,112,0,0" VerticalAlignment="Top" Width="150"/>
        <Image x:Name="AwayTeam" HorizontalAlignment="Left" Height="150" Margin="41,281,0,0" VerticalAlignment="Top" Width="150"/>
        <TextBlock x:Name="HomeScore" HorizontalAlignment="Left" Margin="216,112,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Height="150" Width="150" TextAlignment="Center" FontSize="72"/>
        <TextBlock x:Name="HomeHits" HorizontalAlignment="Left" Margin="385,112,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Height="150" Width="150" TextAlignment="Center" FontSize="72"/>
        <TextBlock x:Name="HomeErrors" HorizontalAlignment="Left" Margin="554,112,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Height="150" Width="150" TextAlignment="Center" FontSize="72"/>
        <TextBlock x:Name="AwayScore" HorizontalAlignment="Left" Margin="216,281,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Height="150" Width="150" TextAlignment="Center" FontSize="72"/>
        <TextBlock x:Name="AwayHits" HorizontalAlignment="Left" Margin="385,281,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Height="150" Width="150" TextAlignment="Center" FontSize="72"/>
        <TextBlock x:Name="AwayErrors" HorizontalAlignment="Left" Margin="554,281,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Height="150" Width="150" TextAlignment="Center" FontSize="72"/>
    </Grid>
</Page>
